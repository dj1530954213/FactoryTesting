<UserControl
    x:Class="FatFullVersion.Views.ConfigEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters1="clr-namespace:FatFullVersion.Shared.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:FatFullVersion.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <!--  xmlns:converters="clr-namespace:FatFullVersion.Converters"  -->

    <UserControl.Resources>
        <!--  转换器  -->
        <converters1:ChannelTypeConverter x:Key="ChannelTypeConverter" />

        <!--  样式定义  -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        </Style>
        <Style
            x:Key="TextBoxStyle"
            BasedOn="{StaticResource MaterialDesignTextBox}"
            TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Width" Value="200" />
        </Style>
        <Style
            x:Key="ComboBoxStyle"
            BasedOn="{StaticResource MaterialDesignComboBox}"
            TargetType="ComboBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Width" Value="200" />
        </Style>
        <Style
            x:Key="CheckBoxStyle"
            BasedOn="{StaticResource MaterialDesignCheckBox}"
            TargetType="CheckBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}" />
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <materialDesign:DialogHost IsOpen="{Binding IsLoading}">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <ProgressBar
                        Width="200"
                        Height="20"
                        IsIndeterminate="True" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Text="正在加载..." />
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  标题  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="20,10"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="PLC配置编辑" />

                <!--  主内容区域  -->
                <TabControl
                    Grid.Row="1"
                    Margin="10"
                    FontSize="20">
                    <!--  测试PLC配置  -->
                    <TabItem Header="通讯参数配置">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="10">
                                    <!--  配置表单  -->
                                    <GroupBox Header="测试PLC配置" Style="{StaticResource GroupBoxStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <!--  IP地址  -->
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="IP地址:" />
                                            <TextBox
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TestPlcConfig.IpAddress}" />

                                            <!--  端口  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="端口:" />
                                            <TextBox
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TestPlcConfig.Port}" />

                                            <!--  站号  -->
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="站号:" />
                                            <TextBox
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TestPlcConfig.Station}" />

                                            <!--  数据格式  -->
                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="数据格式:" />
                                            <ComboBox
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                FontSize="20"
                                                SelectedValue="{Binding TestPlcConfig.DataFormat}"
                                                SelectedValuePath="Content"
                                                Style="{StaticResource ComboBoxStyle}">
                                                <ComboBoxItem Content="ABCD" />
                                                <ComboBoxItem Content="BADC" />
                                                <ComboBoxItem Content="CDAB" />
                                                <ComboBoxItem Content="DCBA" />
                                            </ComboBox>

                                            <!--  连接超时  -->
                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="连接超时(ms):" />
                                            <TextBox
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TestPlcConfig.ConnectTimeOut}" />

                                            <!--  接收超时  -->
                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="接收超时(ms):" />
                                            <TextBox
                                                Grid.Row="5"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TestPlcConfig.ReceiveTimeOut}" />

                                            <!--  休眠时间  -->
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="休眠时间(ms):" />
                                            <TextBox
                                                Grid.Row="0"
                                                Grid.Column="3"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TestPlcConfig.SleepTime}" />

                                            <!--  Socket保持连接时间  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="Socket保持连接时间:" />
                                            <TextBox
                                                Grid.Row="1"
                                                Grid.Column="3"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TestPlcConfig.SocketKeepAliveTime}" />

                                            <!--  地址从0开始  -->
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="地址从0开始:" />
                                            <CheckBox
                                                Grid.Row="2"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TestPlcConfig.AddressStartWithZero}"
                                                Style="{StaticResource CheckBoxStyle}" />

                                            <!--  检查消息ID  -->
                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="检查消息ID:" />
                                            <CheckBox
                                                Grid.Row="3"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TestPlcConfig.IsCheckMessageId}"
                                                Style="{StaticResource CheckBoxStyle}" />

                                            <!--  字符串反转  -->
                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="字符串反转:" />
                                            <CheckBox
                                                Grid.Row="4"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TestPlcConfig.IsStringReverse}"
                                                Style="{StaticResource CheckBoxStyle}" />

                                            <!--  持久连接  -->
                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="持久连接:" />
                                            <CheckBox
                                                Grid.Row="5"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TestPlcConfig.IsPersistentConnection}"
                                                Style="{StaticResource CheckBoxStyle}" />
                                        </Grid>
                                    </GroupBox>

                                    <!--  操作按钮  -->
                                    <StackPanel
                                        Margin="0,20,0,0"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <Button
                                            Margin="0,0,10,0"
                                            Command="{Binding SaveTestPlcConfigCommand}"
                                            Content="保存配置"
                                            FontSize="20"
                                            Style="{StaticResource MaterialDesignRaisedButton}" />
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="10">
                                    <!--  配置表单  -->
                                    <GroupBox Header="被测PLC配置" Style="{StaticResource GroupBoxStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  IP地址  -->
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="IP地址:" />
                                            <TextBox
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TargetPlcConfig.IpAddress}" />

                                            <!--  端口  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="端口:" />
                                            <TextBox
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TargetPlcConfig.Port}" />

                                            <!--  站号  -->
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="站号:" />
                                            <TextBox
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TargetPlcConfig.Station}" />

                                            <!--  数据格式  -->
                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="数据格式:" />
                                            <ComboBox
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                FontSize="20"
                                                SelectedValue="{Binding TargetPlcConfig.DataFormat}"
                                                SelectedValuePath="Content"
                                                Style="{StaticResource ComboBoxStyle}">
                                                <ComboBoxItem Content="ABCD" />
                                                <ComboBoxItem Content="BADC" />
                                                <ComboBoxItem Content="CDAB" />
                                                <ComboBoxItem Content="DCBA" />
                                            </ComboBox>

                                            <!--  连接超时  -->
                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="连接超时(ms):" />
                                            <TextBox
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TargetPlcConfig.ConnectTimeOut}" />

                                            <!--  接收超时  -->
                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="0"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="接收超时(ms):" />
                                            <TextBox
                                                Grid.Row="5"
                                                Grid.Column="1"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TargetPlcConfig.ReceiveTimeOut}" />

                                            <!--  休眠时间  -->
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="休眠时间(ms):" />
                                            <TextBox
                                                Grid.Row="0"
                                                Grid.Column="3"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TargetPlcConfig.SleepTime}" />

                                            <!--  Socket保持连接时间  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="Socket保持连接时间:" />
                                            <TextBox
                                                Grid.Row="1"
                                                Grid.Column="3"
                                                FontSize="20"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding TargetPlcConfig.SocketKeepAliveTime}" />

                                            <!--  地址从0开始  -->
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="地址从0开始:" />
                                            <CheckBox
                                                Grid.Row="2"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TargetPlcConfig.AddressStartWithZero}"
                                                Style="{StaticResource CheckBoxStyle}" />

                                            <!--  检查消息ID  -->
                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="检查消息ID:" />
                                            <CheckBox
                                                Grid.Row="3"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TargetPlcConfig.IsCheckMessageId}"
                                                Style="{StaticResource CheckBoxStyle}" />

                                            <!--  字符串反转  -->
                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="字符串反转:" />
                                            <CheckBox
                                                Grid.Row="4"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TargetPlcConfig.IsStringReverse}"
                                                Style="{StaticResource CheckBoxStyle}" />

                                            <!--  持久连接  -->
                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="2"
                                                FontSize="20"
                                                Style="{StaticResource LabelStyle}"
                                                Text="持久连接:" />
                                            <CheckBox
                                                Grid.Row="5"
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                IsChecked="{Binding TargetPlcConfig.IsPersistentConnection}"
                                                Style="{StaticResource CheckBoxStyle}" />
                                        </Grid>
                                    </GroupBox>

                                    <!--  操作按钮  -->
                                    <StackPanel
                                        Margin="0,20,0,0"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <Button
                                            Margin="0,0,10,0"
                                            Command="{Binding SaveTargetPlcConfigCommand}"
                                            Content="保存配置"
                                            FontSize="20"
                                            Style="{StaticResource MaterialDesignRaisedButton}" />
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <!--  通道比较表配置  -->
                    <TabItem Header="测试PLC通讯点位表">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="259*"/>
                                <ColumnDefinition Width="701*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  操作按钮  -->
                            <StackPanel
                                Grid.Row="0"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding AddComparisonTableCommand}"
                                    Content="添加通道"
                                    FontSize="20"
                                    Style="{StaticResource MaterialDesignRaisedButton}" />
                            </StackPanel>

                            <!--  DataGrid  -->
                            <DataGrid
                                Grid.Row="1"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="True"
                                FontSize="20"
                                HeadersVisibility="All"
                                IsReadOnly="False"
                                ItemsSource="{Binding ComparisonTables}"
                                SelectedItem="{Binding SelectedComparisonTable}"
                                SelectionMode="Single"
                                SelectionUnit="FullRow" Grid.ColumnSpan="2" Margin="0,0,0,42" Grid.RowSpan="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="100"
                                        Binding="{Binding Id}"
                                        Header="ID"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding ChannelAddress}"
                                        Header="通道地址" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding CommunicationAddress}"
                                        Header="通讯地址" />
                                    <DataGridComboBoxColumn
                                        Width="*"
                                        DisplayMemberPath="DisplayName"
                                        Header="通道类型"
                                        SelectedValueBinding="{Binding ChannelType}"
                                        SelectedValuePath="Value">
                                        <DataGridComboBoxColumn.ElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemsSource" Value="{Binding DataContext.ChannelTypes, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                            </Style>
                                        </DataGridComboBoxColumn.ElementStyle>
                                        <DataGridComboBoxColumn.EditingElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemsSource" Value="{Binding DataContext.ChannelTypes, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                            </Style>
                                        </DataGridComboBoxColumn.EditingElementStyle>
                                    </DataGridComboBoxColumn>
                                    <DataGridTemplateColumn Width="Auto" Header="操作">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    Command="{Binding DataContext.DeleteComparisonTableCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                    CommandParameter="{Binding}"
                                                    Content="删除"
                                                    FontSize="20"
                                                    Style="{StaticResource MaterialDesignFlatButton}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!--  保存按钮  -->
                            <StackPanel
                                Grid.Row="2"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal" Grid.Column="1">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding SaveComparisonTablesCommand}"
                                    Content="保存所有通道配置"
                                    FontSize="20"
                                    Style="{StaticResource MaterialDesignRaisedButton}" />
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>
