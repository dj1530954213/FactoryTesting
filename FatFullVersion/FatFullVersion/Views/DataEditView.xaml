                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        Background="#E6E6E6"
                                        Command="{Binding ResetAILowAlarmCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="复位"
                                        Foreground="#333333" />
                                </DockPanel>

                                <Button Grid.Row="1" Padding="16,8" Command="{Binding ConfirmAILowAlarmCommand}" CommandParameter="{Binding CurrentChannel}" Content="确认通过" Foreground="White">
                                    <Button.Background>
                                        <MultiBinding Converter="{StaticResource AlarmPairStatusToColorConverter}">
                                            <Binding Path="CurrentChannel.LowAlarmStatus" />
                                            <Binding Path="CurrentChannel.LowLowAlarmStatus" />
                                        </MultiBinding>
                                    </Button.Background>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <!--  第四区域：报警值设定核对  -->
                        <GroupBox Margin="0,0,0,12" Header="报警值设定核对">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="低报设定值:" />
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="{Binding AILowSetValue, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="低低报设定值:" />
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="{Binding AILowLowSetValue, UpdateSourceTrigger=PropertyChanged}" />
                                </DockPanel>

                                <DockPanel Grid.Row="1" Margin="0,0,0,8">
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="高报设定值:" />
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="{Binding AIHighSetValue, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="高高报设定值:" />
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="{Binding AIHighHighSetValue, UpdateSourceTrigger=PropertyChanged}" />
                                </DockPanel>

                                <Button
                                    Grid.Row="2"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.AlarmValueSetStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAIAlarmValueSetCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>

                        <!--  第五区域：维护功能核对  -->
                        <GroupBox Margin="0,0,0,12" Header="维护功能核对">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendAIMaintenanceCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发测试命令"
                                        Foreground="White"
                                        IsEnabled="{Binding CurrentChannel.MaintenanceFunction, Converter={StaticResource NotApplicableToEnabledConverter}}" />

                                    <Button
                                        Width="100"
                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        Background="#E6E6E6"
                                        Command="{Binding ResetAIMaintenanceCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="复位"
                                        Foreground="#333333" />
                                </DockPanel>

                                <Button
                                    Grid.Row="1"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.MaintenanceFunction, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAIMaintenanceCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>

                        <!--  第六区域：趋势检查  -->
                        <GroupBox Margin="0,0,0,12" Header="上位机趋势检查">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Button
                                    Grid.Row="0"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.TrendCheck, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAITrendCheckCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>

                        <!--  第七区域：报表检查  -->
                        <GroupBox Margin="0,0,0,12" Header="上位机报表检查">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Button
                                    Grid.Row="0"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.ReportCheck, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAOReportCheckCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseAIManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  DI手动测试窗口  -->
        <Popup
            x:Name="DIManualTestPopup"
            Width="380"
            Height="300"
            IsOpen="{Binding IsDIManualTestOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="DI手动测试窗口" />

                    <StackPanel Grid.Row="1" Margin="0,12">
                        <!--  反馈状态核对区域  -->
                        <GroupBox Margin="0,0,0,12" Header="反馈状态核对">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendDITestCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发测试命令"
                                        Foreground="White" />

                                    <Button
                                        Width="100"
                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        Background="#E6E6E6"
                                        Command="{Binding ResetDICommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="复位"
                                        Foreground="#333333" />
                                </DockPanel>

                                <Button
                                    Grid.Row="1"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.ShowValueStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmDICommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseDIManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  DO手动测试窗口  -->
        <Popup
            x:Name="DOManualTestPopup"
            Width="380"
            Height="300"
            IsOpen="{Binding IsDOManualTestOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="DO手动测试窗口" />

                    <StackPanel Grid.Row="1" Margin="0,12">
                        <!--  监测状态提示  -->
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{Binding DOMonitorStatus, Converter={StaticResource MonitorStatusToColorConverter}}"
                            Text="{Binding DOMonitorStatus}" />

                        <!--  检测值显示区域  -->
                        <Border
                            Margin="0,0,0,12"
                            Padding="8"
                            Background="#F5F5F5"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="18"
                                Foreground="Black"
                                Text="{Binding DOCurrentValue}" />
                        </Border>

                        <!--  操作按钮区域  -->
                        <StackPanel Margin="0,8">
                            <!--<Button
                                Margin="0,0,0,8"
                                Padding="12,8"
                                Background="#5B9BD5"
                                Command="{Binding StartDOMonitorCommand}"
                                CommandParameter="{Binding CurrentChannel}"
                                Content="开始检测"
                                Foreground="White" />-->

                            <Button
                                Padding="16,8"
                                Background="{Binding CurrentChannel.ShowValueStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                Command="{Binding ConfirmDOCommand}"
                                CommandParameter="{Binding CurrentChannel}"
                                Content="确认通过"
                                Foreground="White" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseDOManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  AO手动测试窗口  -->
        <Popup
            x:Name="AOManualTestPopup"
            Width="500"
            Height="500"
            IsOpen="{Binding IsAOManualTestOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="AO手动测试窗口" />

                    <StackPanel Grid.Row="1" Margin="0,12">
                        <!--  监测状态提示  -->
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{Binding AOMonitorStatus, Converter={StaticResource MonitorStatusToColorConverter}}"
                            Text="{Binding AOMonitorStatus}" />

                        <!--  检测值显示区域  -->
                        <Border
                            Margin="0,0,0,12"
                            Padding="8"
                            Background="#F5F5F5"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="18"
                                Foreground="Black"
                                Text="{Binding AOCurrentValue}" />
                        </Border>

                        <!--  操作按钮区域  -->
                        <StackPanel Margin="0,8">
                            <Button
                                Padding="16,8"
                                Background="{Binding CurrentChannel.ShowValueStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                Command="{Binding ConfirmAOCommand}"
                                CommandParameter="{Binding CurrentChannel}"
                                Content="确认通过"
                                Foreground="White" />
                        </StackPanel>

                        <!--  上位机趋势检查  -->
                        <GroupBox Margin="0,8,0,8" Header="上位机趋势检查">
                            <Grid Margin="6">
                                <Button
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.TrendCheck, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAOTrendCheckCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>

                        <!--  上位机报表检查  -->
                        <GroupBox Margin="0,8,0,8" Header="上位机报表检查">
                            <Grid Margin="6">
                                <Button
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.ReportCheck, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAOReportCheckCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseAOManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  跳过模块窗口  -->
        <Popup
            x:Name="SkipModulePopup"
            Width="500"
            Height="500"
            IsOpen="{Binding IsSkipModuleOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Foreground="Black"
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="跳过模块测试" />

                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <!-- 搜索框和选择按钮 -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Foreground="Black"
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Text="搜索:" />
                            <TextBox
                                Foreground="Black"
                                Grid.Column="1"
                                Padding="8,4"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                FontSize="18"
                                Text="{Binding ModuleSearchFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            
                            <Button
                                Grid.Column="2"
                                Margin="8,0,4,0"
                                Padding="8,4"
                                Command="{Binding SelectAllModulesCommand}"
                                Content="全选"
                                FontSize="14" />
                            
                            <Button
                                Grid.Column="3"
                                Margin="4,0,0,0"
                                Padding="8,4"
                                Command="{Binding UnselectAllModulesCommand}"
                                Content="取消全选"
                                FontSize="14" />
                        </Grid>
                        
                        <!-- 模块列表 -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 模块数量提示 -->
                            <TextBlock 
                                Grid.Row="0" 
                                Margin="4,0,0,4" 
                                Text="{Binding Modules.Count, StringFormat='找到 {0} 个模块'}" 
                                Foreground="#666666"
                                FontSize="12"/>
                            
                            <!-- 模块列表容器 -->
                            <Grid Grid.Row="1">
                                <!-- 加载指示器 -->
                                <ProgressBar 
                                    Foreground="Black"
                                    IsIndeterminate="True" 
                                    Height="10" 
                                    VerticalAlignment="Top"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <!-- 模块列表 -->
                                <ListBox
                                    BorderBrush="#CCCCCC"
                                    Background="DimGray"
                                    BorderThickness="1"
                                    ItemsSource="{Binding FilteredModules}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="4" Orientation="Horizontal">
                                                <CheckBox
                                                    Foreground="Black"
                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                    Content="{Binding ModuleName, StringFormat='{}模块: {0}'}"
                                                    FontSize="14" />
                                                <StackPanel Margin="50,4,0,0" Orientation="Horizontal">
                                                    <TextBlock Text="类型: " Foreground="Black" />
                                                    <TextBlock Text="{Binding ModuleType}" Foreground="Black" />
                                                    <TextBlock Text=", 通道数: " Margin="8,0,0,0" Foreground="Black" />
                                                    <TextBlock Text="{Binding ChannelCount}" Foreground="Black" />
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Foreground="Black"
                            Grid.Row="0"
                            Margin="0,0,0,4"
                            FontSize="18"
                            Text="跳过原因:" />

                        <TextBox
                            Foreground="Black"
                            Grid.Row="1"
                            Height="60"
                            Padding="8"
                            AcceptsReturn="True"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            FontSize="18"
                            Text="{Binding SkipReason, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>

                    <StackPanel
                        Grid.Row="3"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding ConfirmSkipModuleCommand}"
                            Content="确认"
                            Foreground="White" />

                        <Button
                            Padding="16,8"
                            Background="#E6E6E6"
                            Command="{Binding CancelSkipModuleCommand}"
                            Content="取消"
                            Foreground="#333333" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

    </Grid>
</UserControl>

