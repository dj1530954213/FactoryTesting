<UserControl
    x:Class="FatFullVersion.Views.DataEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:FatFullVersion.Shared.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FatFullVersion.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FatFullVersion.ViewModels"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converter:OverallStatusToColorConverter x:Key="StatusToColorConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converter:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converter:BatchStatusToColorConverter x:Key="BatchStatusToColorConverter" />
        <converter:ModuleTypeToVisibilityConverter x:Key="ModuleTypeToVisibilityConverter" />
        <converter:ModuleTypeToCommandConverter x:Key="ModuleTypeToCommandConverter" />
        <converter:NotApplicableValueConverter x:Key="NotApplicableValueConverter" />
        <converter:DoubleToSlashConverter x:Key="DoubleToSlashConverter" />
        <converter:MonitorStatusToColorConverter x:Key="MonitorStatusToColorConverter" />
        <converter:AlarmStatusToColorConverter x:Key="AlarmStatusToColorConverter" />
        <converter:HardPointTestResultToEnabledConverter x:Key="HardPointTestResultToEnabledConverter" />
        <converter:BooleanToColorConverter x:Key="BooleanToColorConverter" />
        <converter:BooleanToIconConverter x:Key="BooleanToIconConverter" />
        <converter:BooleanToStatusConverter x:Key="BooleanToStatusConverter" />
        <converter:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
        <converter:AlarmPairStatusToColorConverter x:Key="AlarmPairStatusToColorConverter" />
        <converter:NotApplicableToEnabledConverter x:Key="NotApplicableToEnabledConverter" />

        <!--  公共DataGrid样式  -->
        <Style x:Key="DataGridCellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border
                            x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#AAAAAA"
                            BorderThickness="0,0,1,1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="LightBlue" />
        </Style>

        <Style x:Key="DataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="RowHeight" Value="50" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="All" />
            <Setter Property="VerticalGridLinesBrush" Value="#AAAAAA" />
            <Setter Property="HorizontalGridLinesBrush" Value="#AAAAAA" />
            <Setter Property="Background" Value="#607D8B" />
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CellStyle" Value="{StaticResource DataGridCellStyle}" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly" />
            <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="IsHitTestVisible" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridRow}">
                                    <Border
                                        x:Name="DGR_Border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                        <SelectiveScrollingGrid>
                                            <SelectiveScrollingGrid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </SelectiveScrollingGrid.ColumnDefinitions>
                                            <SelectiveScrollingGrid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </SelectiveScrollingGrid.RowDefinitions>
                                            <DataGridCellsPresenter
                                                Grid.Column="1"
                                                ItemsPanel="{TemplateBinding ItemsPanel}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            <DataGridDetailsPresenter
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                Visibility="{TemplateBinding DetailsVisibility}" />
                                        </SelectiveScrollingGrid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Background" Value="#607D8B" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,12" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="#333333" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
        </Style>

        <!--  滚动条样式  -->
        <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Background" Value="#555555" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle
                            Fill="{TemplateBinding Background}"
                            RadiusX="4"
                            RadiusY="4" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="12" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}" />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Row="0" Grid.Column="0" />

                            <ScrollBar
                                x:Name="PART_VerticalScrollBar"
                                Grid.Row="0"
                                Grid.Column="1"
                                Maximum="{TemplateBinding ScrollableHeight}"
                                Style="{StaticResource CustomScrollBarStyle}"
                                ViewportSize="{TemplateBinding ViewportHeight}"
                                Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                Value="{TemplateBinding VerticalOffset}" />

                            <ScrollBar
                                x:Name="PART_HorizontalScrollBar"
                                Grid.Row="1"
                                Grid.Column="0"
                                Maximum="{TemplateBinding ScrollableWidth}"
                                Orientation="Horizontal"
                                Style="{StaticResource CustomScrollBarStyle}"
                                ViewportSize="{TemplateBinding ViewportWidth}"
                                Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                Value="{TemplateBinding HorizontalOffset}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!--  工具栏: 操作按钮区  -->
            <RowDefinition Height="Auto" />
            <!--  通道对应关系DataGrid  -->
            <RowDefinition Height="*" />
            <!--  测试结果DataGrid  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  工具栏: 操作按钮区  -->
        <Grid Grid.Row="0">
            <materialDesign:Card Margin="5">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        Command="{Binding ImportConfigCommand}"
                        Content="导入配置"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="导入点表配置" />

                    <Button
                        Grid.Column="1"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        Command="{Binding RestoreConfigCommand}"
                        Content="恢复配置"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="从数据库中恢复配置" />

                    <Button
                        Grid.Column="2"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        Command="{Binding SelectBatchCommand}"
                        Content="选择批次"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="选择测试批次" />

                    <Button
                        Grid.Column="3"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        Command="{Binding ExportChannelMapCommand}"
                        Content="导出通道表"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="导出通道表" />

                    <Button
                        Grid.Column="4"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        Command="{Binding SkipModuleCommand}"
                        Content="跳过模块配置"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="跳过模块配置" />

                    <Button
                        Grid.Column="5"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        Command="{Binding FinishWiringCommand}"
                        Content="接线确认"
                        FontSize="16"
                        FontWeight="SemiBold"
                        IsEnabled="{Binding IsWiringCompleteBtnEnabled}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="完成接线确认" />
                    <!---->

                    <Button
                        Grid.Column="6"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        Command="{Binding StartTestCommand}"
                        Content="开始测试"
                        FontSize="16"
                        FontWeight="SemiBold"
                        IsEnabled="{Binding IsStartTestButtonEnabled}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="开始测试" />

                    <Button
                        Grid.Column="7"
                        Height="40"
                        Margin="5,5"
                        Padding="10"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Command="{Binding ExportTestResultsCommand}"
                        Content="导出测试结果"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="导出当前测试结果" />

                    <!--<TextBlock
                        Grid.Column="5"
                        Margin="15,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="Black"
                        Text="{Binding Message}" />-->
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!--  通道对应关系DataGrid  -->
        <Border
            Grid.Row="1"
            Margin="16,8,16,8"
            Padding="12"
            Background="#F0F7FF"
            BorderBrush="#AAAAAA"
            BorderThickness="1"
            CornerRadius="4">
            <DockPanel>
                <Grid Margin="0,0,0,12" DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Text="测试队列显示区域" />

                    <!--  测试PLC连接状态  -->
                    <StackPanel
                        Grid.Column="1"
                        Margin="0,0,12,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Border
                            x:Name="TestPlcStatusBorder"
                            Margin="0,0,12,0"
                            Padding="8,4"
                            Background="{Binding TestPlc.IsConnected, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#1E88E5;#F44336'}"
                            CornerRadius="3"
                            ToolTip="{Binding TestPlc.IsConnected, Converter={StaticResource BooleanToStatusConverter}, ConverterParameter='已连接;未连接'}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TestPlc.IsConnected}" Value="False">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="1.0"
                                                            To="0.5"
                                                            Duration="0:0:0.7" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="1.0"
                                                            Duration="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,4,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Kind="{Binding TestPlc.IsConnected, Converter={StaticResource BooleanToIconConverter}, ConverterParameter='CheckCircle;Alert'}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="测试PLC" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!--  被测PLC连接状态  -->
                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,12,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Border
                            x:Name="TargetPlcStatusBorder"
                            Margin="0,0,12,0"
                            Padding="8,4"
                            Background="{Binding TargetPlc.IsConnected, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#1E88E5;#F44336'}"
                            CornerRadius="3"
                            ToolTip="{Binding TargetPlc.IsConnected, Converter={StaticResource BooleanToStatusConverter}, ConverterParameter='已连接;未连接'}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TargetPlc.IsConnected}" Value="False">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="1.0"
                                                            To="0.5"
                                                            Duration="0:0:0.7" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="1.0"
                                                            Duration="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,4,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Kind="{Binding TargetPlc.IsConnected, Converter={StaticResource BooleanToIconConverter}, ConverterParameter='CheckCircle;Alert'}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="被测PLC" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <ComboBox
                        Name="ChannelTypeComboBox"
                        Grid.Column="3"
                        Width="120"
                        Margin="0,0,8,0"
                        FontSize="18"
                        Foreground="Black"
                        SelectedIndex="0"
                        Text="{Binding SelectedChannelType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Background="WhiteSmoke" Content="AI通道" />
                        <ComboBoxItem Background="WhiteSmoke" Content="AO通道" />
                        <ComboBoxItem Background="WhiteSmoke" Content="DI通道" />
                        <ComboBoxItem Background="WhiteSmoke" Content="DO通道" />
                    </ComboBox>
                </Grid>
                <!--  统一的通道DataGrid  -->
                <!--  ScrollViewer.CanContentScroll="False"可以用于控制滚动速度  -->
                <DataGrid
                    Margin="0,8,0,0"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    FontSize="20"
                    IsReadOnly="True"
                    ItemsSource="{Binding CurrentChannels}"
                    ScrollViewer.CanContentScroll="False"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    Style="{StaticResource DataGridStyle}">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
                    </DataGrid.Resources>
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="{Binding OverallStatus, Converter={StaticResource StatusToColorConverter}}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridRow}">
                                        <Border
                                            x:Name="RowBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            SnapsToDevicePixels="True">
                                            <SelectiveScrollingGrid>
                                                <SelectiveScrollingGrid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </SelectiveScrollingGrid.ColumnDefinitions>
                                                <SelectiveScrollingGrid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                </SelectiveScrollingGrid.RowDefinitions>
                                                <DataGridCellsPresenter
                                                    Grid.Column="1"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                <DataGridDetailsPresenter
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Visibility="{TemplateBinding DetailsVisibility}" />
                                            </SelectiveScrollingGrid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding TestBatch}"
                            Header="测试批次" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding VariableName}"
                            Header="变量地址" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding TestPLCChannelTag}"
                            Header="测试PLC通道位号" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding ChannelTag}"
                            Header="被测PLC通道位号" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding ModuleType}"
                            Header="通道类型" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding HardPointTestResult}"
                            Header="通道硬点测试结果" />
                        <DataGridTemplateColumn Width="Auto" MinWidth="120" Header="错误详情">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Margin="4" Padding="10,4" Background="#E53935" Foreground="White"
                                            Content="查看错误"
                                            Command="{Binding DataContext.ShowErrorDetailCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                            CommandParameter="{Binding}"
                                            Visibility="{Binding HardPointErrorDetail, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" Header="通道复测">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="4"
                                        Padding="10,4"
                                        Background="#5B9BD5"
                                        Command="{Binding DataContext.RetestCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"
                                        Content="通道复测"
                                        FontSize="18"
                                        Foreground="White" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" Header="手动测试环节">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="4"
                                        Padding="10,4"
                                        Background="#5B9BD5"
                                        Content="打开手动测试窗口"
                                        FontSize="18"
                                        Foreground="White"
                                        IsEnabled="{Binding HardPointTestResult, Converter={StaticResource HardPointTestResultToEnabledConverter}}"
                                        Visibility="{Binding ModuleType, Converter={StaticResource ModuleTypeToVisibilityConverter}}">
                                        <Button.Command>
                                            <MultiBinding Converter="{StaticResource ModuleTypeToCommandConverter}">
                                                <Binding Path="ModuleType" />
                                                <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType={x:Type DataGrid}}" />
                                            </MultiBinding>
                                        </Button.Command>
                                        <Button.CommandParameter>
                                            <Binding Path="." />
                                        </Button.CommandParameter>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!--  测试结果DataGrid  -->
        <Border
            Grid.Row="2"
            Margin="16,8,16,16"
            Padding="12"
            Background="#FFF8F0"
            BorderBrush="#AAAAAA"
            BorderThickness="1"
            CornerRadius="4">
            <DockPanel>
                <Grid Margin="0,0,0,12" DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding TotalPointCount}" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding TestedPointCount}" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding WaitingPointCount}" />
                        <TextBlock
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding SuccessPointCount}" />
                        <TextBlock
                            Grid.Column="4"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
